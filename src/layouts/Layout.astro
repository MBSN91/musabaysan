---
export interface Props {
	title: string;
}

const { title } = Astro.props;

import Guides from '../components/guides.astro';
import '@fontsource/inconsolata/variable.css';
import '@fontsource/open-sans/variable.css';
import '@fontsource/teko';
import '@fontsource/cormorant/variable.css';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<link
			rel="icon"
			type="image/png"
			href="/musa-selfie.png"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<script async src="https://cdn.seline.so/seline.js" data-token="5729609278daf4f"></script>
		<title>{title}</title>
	</head>
	<!-- Jooo, thanks voor het checken van de bron! Doe ik ook wel eens! Website is volledig zelfgemaakt in astro met een vleugje react en de styling in Tailwind. Gehost doormiddel van Netlify. Groetjes xoxo <3 -->
	<body class="bg-background dark:bg-dark-100">
		<Guides />
		<slot />
	</body>
</html>
