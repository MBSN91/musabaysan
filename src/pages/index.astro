---
import Layout from '../layouts/Layout.astro';
import Button from '../components/button.astro';
import Logo from '../assets/logo.svg';
import Arrow from '../assets/arrow.svg';
---

<Layout title="Test build">
	<main class="relative flex flex-col z-10 justify-center items-center text-center h-screen px-8">
		<div class="relative flex flex-col items-center text-center p-8 w-full max-w-6xl space-y-4 outline outline-1 outline-secondary outline-offset-0.5">
			<div class="absolute w-4 h-4 outline outline-1 bg-background outline-secondary -left-2 -top-2" />
			<div class="absolute w-4 h-4 outline outline-1 bg-background outline-secondary -right-2 top-36" />
			<div class="absolute w-4 h-4 outline outline-1 bg-background outline-secondary -top-6" />
			<div class="absolute w-4 h-4 outline outline-1 bg-background outline-secondary -right-2 -top-6" />
			<div class="absolute w-4 h-4 outline outline-1 bg-background outline-secondary -left-2 -bottom-2" />
			<div class="absolute w-4 h-4 outline outline-1 bg-background outline-secondary -left-2 top-36" />
			<div class="absolute w-4 h-4 outline outline-1 bg-background outline-secondary -bottom-2" />
			<div class="absolute w-4 h-4 outline outline-1 bg-background outline-secondary -right-2 -bottom-2" />
			<div><img src={ Logo } class="relative w-64"></div>
			<div><p class="font-body text-lg">Portfolio is being rebuild from scratch! <br>It will be back soon!</p></div>
			<Button 
				title="visit portfolio"
				link='https://mbsn.webflow.io/'
			/>
			<div class="relative py-1 px-2 max-w-fit bg-primary text-secondary font-smallt text-xxs">old portfolio website is still online!<div class="absolute -right-10 -top-11"><img src={ Arrow } class="h-12"></div></div>
		</div>	
	</main>
</Layout>
