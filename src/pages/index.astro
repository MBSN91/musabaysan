---
import Layout from '../layouts/Layout.astro';
import Button from '../components/button.astro';
import Logo from '../assets/logo.svg';
import Arrow from '../assets/arrow.svg';
import "@fontsource/Inconsolata";
---

<Layout title="Test build">
	<main class="relative flex flex-col z-10 justify-center items-center text-center h-screen px-8">
		<div class="relative flex flex-col items-center text-center p-8 w-full max-w-6xl space-y-4 border-solid outline outline-grey-100 outline-offset-0.5">
			<div><img src={ Logo } class="relative w-64"></div>
			<div><p class="font-body text-lg">Portfolio is being rebuild from scratch! <br>It will be back soon!</p></div>
			<Button 
				title="visit portfolio"
				link='https://mbsn.webflow.io/'
			/>
			<div class="relative py-1 px-2 max-w-fit bg-primary text-secondary text-xxs"><p class="font-f"> old portfolio website is still online!</p><div class="absolute -right-10 -top-11"><img src={ Arrow } class="h-12"></div></div>
		</div>	
	</main>
</Layout>
