---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/navigation.astro';
import Case from '../components/cases.astro';

import Musa from '../assets/musa.png';
import MusaDark from '../assets/musa-dark.png'
import MusaMouse from '../assets/indicate.svg'
import AdidasLight from '../assets/clientele/adi.svg'
import HappyLight from '../assets/clientele/HMG.svg'
import HansLight from '../assets/clientele/HansAnders.svg'
import IngLight from '../assets/clientele/ing.svg'
import AdidasDark from '../assets/clientele/dark/adi.svg'
import HappyDark from '../assets/clientele/dark/HMG.svg'
import HansDark from '../assets/clientele/dark/HansAnders.svg'
import IngDark from '../assets/clientele/dark/ing.svg'

import Case1 from '../assets/cases/case-happy.png'
import Case2 from '../assets/cases/adidas-sam.png'
import Case3 from '../assets/cases/opmaat.png'
import Case4 from '../assets/cases/barber.png'
---

<Layout title="Test nav">
    <Navigation />

    <!-- the start of it all, get them recruiters and hiring managers hyped up yo! üî• -->
    <main class="relative min-h-[80vh] md:min-h-[70vh] flex flex-col md:flex-row justify-center px-8 py-0 md:py-8 w-full top-24 mb-8">
        <div class="flex flex-col-reverse md:flex-row max-w-6xl w-full">
            <div class="relative flex flex-col md:flex-row self-center flex-wrap w-full md:w-1/2">
                <h3 class="font-button w-full tracking-wide font-light text-l text-primary dark:text-background">üëãüèº Hi, I am Musa Baysan</h3>
                <h1 class="font-title text-xl font-bold leading-10 text-secondary">Freelance UX designer, with passion for design and motion</h1>
                <p class="py-4 font-body font-medium text-primary dark:text-background text-m">I enjoy building beautifull user interfaces, from intensive research, managing stakeholders, to validating them with the target audience. If you need a communicative team-player, I'd love to hear from you!</p>
            </div>
            <div class="relative flex flex-col md:flex-row h-28 md:h-full flex-wrap w-full md:w-1/2 justify-center md:justify-center items-center">
                <img src= { MusaMouse } alt="musa-pointer" class="mouse hidden md:block pointer-events-none h-12 bottom-1/4 left-8 z-10 relative md:absolute md:animate-floating2">
                <img src= { Musa } alt="musa-selfie" class="w-28 pointer-events-none md:w-48 absolute md:animate-floating opacity-0 dark:opacity-100">
                <img src= { MusaDark } alt="musa-selfie" class="w-28 pointer-events-none md:w-48 absolute md:animate-floating opacity-100 dark:opacity-0">
            </div>
        </div>    
    </main>

    <!-- divider disguised as clients i've worked with in the past -->
    <div class="relative bg-background-100 dark:bg-dark-200 mt-32 flex flex-col justify-center items-center self-center px-8 py-8 w-full">
        <div class="flex -mt-24 bg-background-100 dark:bg-dark-200 flex-col max-w-6xl w-full">
            <div class="w-full drop-shadow dark:drop-shadow-lg bg-background-100 dark:bg-dark-200">
                    <p class="w-full font-smallt text-xxs text-secondary text-center m-2">formerly worked with</p>
                    <div class="flex flex-row">
                        <div class="w-1/4 h-16 flex justify-center">
                            <img src= { AdidasLight } class="w-24 hidden dark:block opacity-30 hover:opacity-100">
                            <img src= { AdidasDark } class="w-24 dark:hidden block opacity-30 hover:opacity-100">
                        </div>
                        <div class="w-1/4 h-16 flex justify-center">
                            <img src= { HappyLight } class="w-24 opacity-30 hidden dark:block hover:opacity-100">
                            <img src= { HappyDark } class="w-24 dark:hidden block opacity-30 hover:opacity-100">
                        </div>
                        <div class="w-1/4 h-16 flex justify-center">
                            <img src= { HansLight } class="w-24 opacity-30 hidden dark:block hover:opacity-100">
                            <img src= { HansDark } class="w-24 dark:hidden block opacity-30 hover:opacity-100">
                        </div>
                        <div class="w-1/4 h-16 flex justify-center">
                            <img src= { IngLight } class="w-24 opacity-30 hidden dark:block hover:opacity-100">
                            <img src= { IngDark } class="w-24 dark:hidden block opacity-30 hover:opacity-100">
                        </div>
                </div>
            </div>
            <div class="flex flex-row w-full">
                <h2 class="font-button text-xl uppercase text-primary dark:text-background">My work</h2>
                <h2 class="font-button text-xl uppercase text-secondary">.</h2>
            </div>
                <div class="w-full flex flex-row flex-wrap">
                    <Case 
                        caseimg= { Case1 }
                        title="Strengthen guest loyalty with a Happy Italy app."
                        />
                    <Case 
                        caseimg= { Case2 }
                        title="Harmonising 5 employee apps into 1 app"
                        />
                    <Case 
                        caseimg= { Case3 }
                        title="Telling the story of a skilled custom tailorer"
                        />
                    <Case 
                        caseimg= { Case4 }
                        title="Barber appointment system and website facelift during the corona pandemic."
                        />   
                </div>             
            
        </div>    
    </div>
</Layout>
