---
import { Icon } from 'astro-icon';

export interface Props {
	title: string;
	link: string;
}

const { title } = Astro.props;
const { link } = Astro.props;
---

<a href={link}>
	<button class="flex z-10 mt-4 justify-center items-center space-x-4 p-4 border-solid border-3 text-background bg-secondary hover:bg-secondary-100 dark:hover:bg-secondary-100 border-secondary dark:hover:border-secondary-100 hover:border-secondary-100 rounded-md h-fit transition-width duration-350 ease-in-out group">
		<div class="font-button uppercase tracking-widest text-l whitespace-nowrap">
			{title}
		</div>
		<Icon name="arrow" class="transition-width duration-500 ease-in-out w-0 overflow-hidden group-hover:w-4"/>
	</button>
</a>
